    name = NordeN
    email = sher-rom2013@yandex.ru
[core]
    longpaths = true
    quotepath = off
    safecrlf = warn
    editor = vim
[diff]
    tool = meld
[difftool "meld"]
    cmd = meld $LOCAL $REMOTE
[merge]
    tool = meld
[mergetool "meld"]
    prompt = false
    keepBackup = false
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output="$MERGED"
[alias]
    lore = log --all --pretty=format:'%C(green)%h %C(blue)%ad%C(auto)%d %C(white)[%s]' --date=format:'%d.%m.%Y %H:%M:%S'
    df = difftool -t meld
    mt = mergetool -t meld